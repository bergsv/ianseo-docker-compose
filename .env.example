# üèπ ianseo Docker Compose - Environment Configuration
# Copy this file to .env and customize your settings

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MySQL Database Settings
MYSQL_DATABASE=ianseo
MYSQL_USER=ianseo
MYSQL_PASSWORD=ianseo_password_2025

# MySQL Root Password (for admin access and phpMyAdmin)
MYSQL_ROOT_PASSWORD=secure_root_password_2025

# =============================================================================
# APPLICATION CONFIGURATION  
# =============================================================================

# ianseo Application Settings
IANSEO_VERSION=20250210

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Port Mappings (change if ports are already in use)
IANSEO_PORT=8080
MYSQL_PORT=3306
PHPMYADMIN_PORT=8081

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Set to 'production' for live deployments
ENVIRONMENT=development

# Enable debug logging (true/false)
DEBUG_MODE=false

